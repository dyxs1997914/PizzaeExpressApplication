<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:text="dish_name" android:textColor="@color/text_primary"
            android:layout_height="35dp" android:id="@+id/dishName" android:layout_weight="0.6"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="0dp"/>
    <TextView
            android:text="dish_quantity" android:textColor="@color/text_primary"
            android:layout_height="35dp" android:id="@+id/dishQuantity" android:layout_weight="0.2"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="0dp"/>
    <TextView
            android:text="dish_price" android:textColor="@color/text_primary"
            android:layout_height="35dp" android:id="@+id/dishPrice" android:layout_weight="0.3"
            android:textSize="20sp" android:textAlignment="center" android:layout_width="0dp"/>

</LinearLayout>